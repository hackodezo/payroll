<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-10">
			<div class="panel panel-info">
				<div class="panel-heading">Add Leave Head</div>
				<div class="panel-body">
					<%= form_for([@paymonth, @paymonth_leafe]) do |f| %>
					  <% if @paymonth_leafe.errors.any? %>
					    <div id="error_explanation">
					      <h2><%= pluralize(@paymonth_leafe.errors.count, "error") %> prohibited this paymonth_leafe from being saved:</h2>

					      <ul>
					      <% @paymonth_leafe.errors.full_messages.each do |message| %>
					        <li><%= message %></li>
					      <% end %>
					      </ul>
					    </div>
					  <% end %>
						<div class="row">
							<div class="col-md-6">
								<div class="Room Id">
		    					<%= f.label :Paymonth %><br>
		    					<%= f.label :paymonth_id, @paymonth_leafe.paymonth.pay_month %>
		    					<%= f.hidden_field :leave_head_id, value: @paymonth_leafe.paymonth.id%>
		 						</div>
 							</div>
 							<div class="col-md-6">
							  <div class="Room Id">
		    					<%= f.label :Leave_head %><br>
		    					<%= f.label :leave_head_id, @paymonth_leafe.leave_head.name %>
		    					<%= f.hidden_field :leave_head_id, value: @paymonth_leafe.leave_head.id%>
		 						</div>
 							</div>
 						</div>
 							<div class="row">
 							<div class="col-md-3"></div>
							<div class="col-md-5">
								<div class="Room Id">
		    					<%= f.label :Value%><br>
		    					<%= f.number_field :value, class: "form-control", placeholder: "Enter Value", id:"basic"%>
		 						</div>
 							</div>
						</div>
						<br/>
						<div class="row">
 							<div class="col-md-4"></div>
							<div class="col-md-5">
							  <div class="actions">
							    <%= f.submit class:"btn btn-primary"%>
							  </div>
				  		</div>
					  </div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
