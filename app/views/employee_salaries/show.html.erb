<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-10">
			<div class="panel panel-info">
				<div class="panel-heading">Salary Slip Of <%=@employee_salary.employee.name%> of <%=@employee_salary.salary_date.strftime("%B %Y")%></div>
				<div class="panel-body">
					<h3 style="text-align:center">Relyon Softtech Ltd</h3>
					<h6 style="text-align:center">No 73, Shreelekha Complex</h6>
					<h6 style="text-align:center">WOC Road, Bangalore</h6>
					<h6 style="text-align:center">Karnataka - 560086</h6>
					<h4  style="text-align:center">Pay Slip For <%=@employee_salary.salary_date.strftime("%B %Y")%></h4>
					<div class="row">
						<div class="col-md-6">
							<div class="row">
								<div class="col-md-6">
									<h6>Employee id:</h6>
								</div>
								<div class="col-md-6">
									<h6><%=@employee_salary.employee.id%></h6>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="row">
								<div class="col-md-6">
									<h6>Employee:</h6>
								</div>
								<div class="col-md-6">
									<h6><%=@employee_salary.employee.name%></h6>
								</div>
							</div>
						</div>
					</div>


					<div class="row">
						<div class="col-md-6">
							<div class="row">
								<div class="col-md-6">
									<h6>Designation:</h6>
								</div>
								<div class="col-md-6">
									<h6><%=@employee_salary.employee.designation.name%></h6>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="row">
								<div class="col-md-6">
									<h6>Department:</h6>
								</div>
								<div class="col-md-6">
									<h6><%=@employee_salary.employee.department.name%></h6>
								</div>
							</div>
						</div>
					</div>

			
					<div class="row">
						<div class="col-md-6">
							<div class="row">
								<div class="col-md-6">
									<h6>Joining Date:</h6>
								</div>
								<div class="col-md-6">
									<h6><%=@employee_salary.employee.date_of_joining%></h6>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="row">
								<div class="col-md-6">
									<h6>Birth Date:</h6>
								</div>
								<div class="col-md-6">
									<h6><%=@employee_salary.employee.dob%></h6>
								</div>
							</div>
						</div>
					</div>
					<!-- Salary Slip Table !-->
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>Earnings</th>
								<th>Amount</th>
								<th>Deductions</th>
								<th>Amount</th>
							</tr>
							
						</thead>
						<tbody>
							<tr>
								<th><small>Basic</small></th>
								<td><small><%=@employee_salary.salary_structure.basic%></small></td>
								<th><small>Provident Fund</small></th>
								<td><%=@employee_salary.salary_structure.pf%></td>
							</tr>
							<tr>
								<th><small>Dearness Allowances</small></th>
								<td><%=@employee_salary.salary_structure.da%></td>
								<th><small>Proffesional Tax</small></th>
								<td><%=@employee_salary.salary_structure.pt%></td>
							</tr>
							<tr>
								<th><small>House Rent Allowances</small></th>
								<td><%=@employee_salary.salary_structure.hra%></td>
								<th></th>
								<td></td>
							</tr>
							<tr>
								<th><small>Special Allowances</small></th>
								<td><%=@employee_salary.salary_structure.special_allowance%></td>
								<th></th>
								<td></td>
							</tr>
							<tr>
								<th><small>Others</small></th>
								<td><%=@employee_salary.salary_structure.others%></td>
								<th></th>
								<td></td>
							</tr>
							<tr>
								<th><small>Conveyance</small></th>
								<td><%=@employee_salary.salary_structure.conveyance%></td>
								<th></th>
								<td></td>
							</tr>
							<tr>
								<th><strong>Total Earnings</strong></th>
								<td><strong><%=@employee_salary.salary_structure.gross%></strong></td>
								<th><strong>Total Deductions</strong></th>
								<td><strong><%=@employee_salary.salary_structure.pf+@employee_salary.salary_structure.pt%></strong></td>
							</tr>
						</tbody>
						<tr>
								<th>Net Pay</th>
								<td><strong><%=@employee_salary.salary_structure.gross-(@employee_salary.salary_structure.pf+@employee_salary.salary_structure.pt)%></strong></td>
							</tr>
					</table>
					<br/>
					<div class="row">
						<div class="col-md-6">
							<h5><strong>Employee's Signature</strong></h5>
						</div>
						<div class="col-md-6">
							<h5 style="text-align:right"><strong>Employeer's Signature</strong></h5>
						</div>
					</div>
				<br/>
				</div>
			</div>
		</div>
	</div>
</div>